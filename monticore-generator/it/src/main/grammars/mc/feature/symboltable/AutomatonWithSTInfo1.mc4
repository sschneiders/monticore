package mc.feature.symboltable;

grammar AutomatonWithSTInfo1 extends mc.common.Basics {

  symbol scope Automaton =
    "automaton" Name "{" (State | Transition)* "}" ;

  symbol scope State =
    "state" Name
    (("<<" ["initial"] ">>" ) | ("<<" ["final"] ">>" ))*
    ( ("{" (State | Transition)* "}") | ";") ;


  Transition =
    from:Name "-" input:Name ">" to:Name ";" ;

}
